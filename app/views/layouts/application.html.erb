<!DOCTYPE html>
<html>
  <head>
    <title><%= t('app.name') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <h1><%= t('app.name_html') %></h1>

      <nav class="navbar navbar-expand-sm navbar-light">
        <div class="container-fluid justify-content-center">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to t('app.root_link'), root_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to t('texts.heading_all'), texts_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to t('editions.heading_all'), editions_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </nav>
    </div>

    <%= yield %>
  </body>
</html>

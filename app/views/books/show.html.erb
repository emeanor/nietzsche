<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to sanitize(t('editions.title_and_editor', title: @book.edition.title, editor: @book.edition.user.username)), edition_path(@book.edition) %>
    </li>
    <li class="breadcrumb-item active" aria-current="page"><%= t('books.number_and_title', number: @book.position, title: @book.title) %></li>
  </ol>
</nav>

<div class="text-center my-5">
  <h3 class="mb-3"><%= t('books.heading', book_number: @book.position) %></h2>
  <h2><%= @book.title %></h2>

  <% if @book.has_subtitle? %>
    <h4 class="mt-3 mb-4"><%= @book.subtitle %></h4>
  <% end %>
</div>

<div class="table-of-contents mb-5 fs-5">
  <div class="contents-list">
    <ol>
      <% @book.chapters.each do |chapter| %>
          <li>
            <%= link_to chapter.has_subtitle? ? "#{chapter.title}: #{chapter.subtitle}" : "#{chapter.title}", edition_book_chapter_path(@book.edition, @book, chapter) %>
          </li>
      <% end %>
    </ol>
  </div>
</div>